<div class="form-row mb-3">
    <div class="col form-group">
        <label for="author">Autor: {{post.author}}</label>
        <input type="hidden" name="author" value="{{post.author}}">
    </div>
</div>

<div class="form-row  mb-3">
    <div class="col form-group">
        <label for="title">Título*</label>
        <input type="text" name="title" class="form-control" required value="{{post.title}}">
    </div>
</div>
<div class="form-row mb-3">
    <div class="col form-group">
        <label for="date">Data*:</label>
        <input name="date" type="date" value="{{toISODate post.date}}">
    </div>
</div>
<div class="form-row mb-3">
    <div class="col form-group">
        <label for="local">Local:</label>
        <input name="location" type="text" value="{{post.location}}">
    </div>
</div>
<div class="form-row mb-3">
    <div class="col form-group">
        <label for="picture">Capa:</label>
        <input type="file" name="picture">
    </div>
</div>
<div class="form-row mb-3">
    <div class="col form-group">
        <label for="content">Conteúdo*</label>
        <textarea name="content" cols="30" rows="10" 
            class="form-control" required>{{post.content}}</textarea>
    </div>
</div>
